        // Ajout d'un effet lorsque le select est cliqué/ouvert
        const countrySelect = document.getElementById('countrySelect');
        const selectElement = countrySelect.querySelector('.form-select');
        
        selectElement.addEventListener('focus', () => {
            countrySelect.classList.add('active');
        });
        
        selectElement.addEventListener('blur', () => {
            countrySelect.classList.remove('active');
        });
        
        // Pour les navigateurs qui ne déclenchent pas focus sur les selects
        selectElement.addEventListener('click', () => {
            countrySelect.classList.toggle('active');
        });
