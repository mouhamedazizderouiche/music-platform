      .star:nth-child(3) { top: 80%; left: 85%; animation-delay: 1s; }
      .star:nth-child(4) { top: 25%; left: 75%; animation-delay: 1.5s; }
      .star:nth-child(5) { top: 65%; left: 20%; animation-delay: 2s; }

