      }

      /* Fond galactique */
      .galaxy-bg {
          position: absolute;
          width: 100%;
          height: 100%;
          background: radial-gradient(circle, rgba(233, 69, 96, 0.2) 0%, transparent 70%);
          animation: pulseNebula 15s ease-in-out infinite;
