          background: linear-gradient(135deg, rgba(233, 69, 96, 0.15), rgba(255, 255, 255, 0.08));
      }

      /* Style lorsque le select est ouvert */
      .form-group-select.active {
          box-shadow: 0 0 25px rgba(233, 69, 96, 0.6);
          background: linear-gradient(135deg, rgba(233, 69, 96, 0.2), rgba(255, 255, 255, 0.1));
      }

      .form-group-select.active::after {
          transform: translateY(-50%) rotate(180deg);
          color: #fff;
      }

      .form-select {
          width: 100%;
          padding: 0.8rem 2.5rem 0.8rem 2.8rem;
          background: transparent;
          border: none;
          border-radius: 20px;
          color: #fff;
          font-size: 0.95rem;
          appearance: none;
          -webkit-appearance: none;
          -moz-appearance: none;
          cursor: pointer;
          transition: all 0.3s ease;
      }

      .form-select:focus {
          outline: none;
      }

      /* Options du select */
      .form-select option {
          background: rgba(13, 27, 42, 0.95);
          color: #fff;
          padding: 10px;
      }

      /* Flèche personnalisée */
      .form-group-select::after {
          content: '\f078';
          font-family: "Font Awesome 6 Free";
          font-weight: 900;
          position: absolute;
          right: 1rem;
          top: 50%;
          transform: translateY(-50%);
          color: #e94560;
          font-size: 1rem;
          pointer-events: none;
          text-shadow: 0 0 5px rgba(233, 69, 96, 0.6);
          transition: all 0.3s ease;
      }

      .form-icon {
          position: absolute;
          left: 0.8rem;
          top: 50%;
